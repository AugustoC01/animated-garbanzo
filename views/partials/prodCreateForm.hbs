<form
  action="/productos"
  id="createForm"
  class="updateForm"
  onsubmit="createProd(createForm)"
  method="post"
>
  <h3>Formulario de creacion</h3>
  <input
    type="text"
    name="title"
    id="title"
    placeholder="Titulo"
    onchange="setPreview(this.id)"
  />
  <input
    type="number"
    name="price"
    id="price"
    placeholder="Precio $"
    onchange="setPreview(this.id)"
  />
  <input
    type="text"
    name="thumbnail"
    id="thumbnail"
    placeholder="Url de imagen"
    onchange="setPreview(this.id)"
  />
  <input
    type="text"
    name="description"
    id="description"
    placeholder="Descripcion"
    onchange="setPreview(this.id)"
  />
  <input
    type="text"
    name="category"
    id="category"
    placeholder="Categoria"
    onchange="setPreview(this.id)"
  />
  <input
    type="text"
    name="code"
    id="code"
    placeholder="Codigo"
    onchange="setPreview(this.id)"
  />
  <input
    type="number"
    name="stock"
    id="stock"
    placeholder="Stock"
    onchange="setPreview(this.id)"
  />
  <button type="submit" class="btn">Crear</button>
</form>

