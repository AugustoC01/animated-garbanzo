<script>
  function setPreview(id) { 
    const preview = id + "-preview"; 
    const x = document.getElementById(id);
    if (id == "thumbnail") {
      document.getElementById(preview).src = x.value 
      return
    }
    if (id == "price") {
      document.getElementById(preview).innerText = "$ " + x.value
      return
    }
    document.getElementById(preview).innerText = x.value; 
  } 
  
